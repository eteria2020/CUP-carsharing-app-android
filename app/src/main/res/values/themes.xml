<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTranslucentStatusBarTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>
        
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="IntroTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Base.NoAnimation" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/darkjunglegreen</item>
        <item name="buttonBarPositiveButtonStyle">@style/button_alertdialog_positive</item>
        <item name="buttonBarButtonStyle">@style/button_alertdialog_positive</item>
    </style>


    <style name="AppTheme.TilRegular" parent="HdxTextRegular">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorPrimary</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="Theme_TextInputLayoutStandard">
        <item name="colorControlNormal">@color/darkjunglegreen</item>
        <item name="colorControlActivated">@color/darkjunglegreen</item>
        <item name="colorControlHighlight">@color/darkjunglegreen</item>
        <item name="android:textColorHint">@color/darkgray</item>
    </style>

    <style name="Style_TextInputLayoutStandard" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomEditText" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/darkgray</item>
        <item name="colorControlActivated">@color/darkjunglegreen</item>
        <item name="android:textColor">@color/darkjunglegreen</item>
        <item name="android:textColorHint">@color/darkgray</item>
        <item name="android:textSize">13.5sp</item>
    </style>

</resources>