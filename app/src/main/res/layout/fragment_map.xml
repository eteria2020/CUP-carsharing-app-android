    <RelativeLayout
        android:layout_width="105.0dp"
        android:layout_height="105.0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <!-- Round -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:src="@drawable/bkg_menu_round"/>
        <!-- Refresh Button -->
        <ImageView
            android:layout_width="32.0dp"
            android:layout_height="32.0dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_referesh"/>
        <!-- Center Button -->
        <ImageView
            android:layout_width="32.0dp"
            android:layout_height="32.0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_center"/>
        <!-- Compass Button -->
        <ImageView
            android:layout_width="32.0dp"
            android:layout_height="32.0dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_compass"/>
    </RelativeLayout>

