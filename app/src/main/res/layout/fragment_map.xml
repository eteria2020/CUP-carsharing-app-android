<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/hdx_toolbarHeight"
    android:background="@color/colorPrimary"
    android:focusableInTouchMode="true">


    <!-- Maps -->
    <org.osmdroid.views.MapView android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View android:id="@+id/mapOverlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Search -->
    <include layout="@layout/search_map" />

    <!-- Round menu -->
    <RelativeLayout
        android:layout_width="105.0dp"
        android:layout_height="105.0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <!-- Round -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:src="@drawable/bkg_menu_round"/>
        <!-- Refresh Button -->
        <ImageView
            android:id="@+id/refreshMapButton"
            android:layout_width="32.0dp"
            android:layout_height="32.0dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_referesh"/>
        <!-- Center Button -->
        <ImageView
            android:id="@+id/centerMapButton"
            android:layout_width="32.0dp"
            android:layout_height="32.0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_center"/>
        <!-- Compass Button -->
        <ImageView
            android:id="@+id/orientationMapButton"
            android:layout_width="32.0dp"
            android:layout_height="32.0dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_compass"/>
    </RelativeLayout>


    <!-- Popup view -->
    <include layout="@layout/car_popup" />
    <!-- /Popup view -->

</RelativeLayout>