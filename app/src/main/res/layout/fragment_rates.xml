<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:layout_marginTop="@dimen/hdx_toolbarHeight"
    android:orientation="vertical">

    <!-- Header -->
    <RelativeLayout
        style="@style/header_view">
        <it.sharengo.eteria.ui.components.CustomTextView
            android:id="@+id/ratesTitleTextView"
            style="@style/header_title"
            app:font_name="poppinsBold"
            android:text="@string/assistance_title_label" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mizzie_06_pianificazione"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <it.sharengo.eteria.ui.components.CustomTextView
        android:id="@+id/ratesH1TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        app:font_name="poppinsBold"
        android:textAlignment="center"
        android:textColor="@color/mediumseagreen"
        android:text="@string/assistance_help_label"/>

    <it.sharengo.eteria.ui.components.CustomTextView
        android:id="@+id/baseTextView"
        style="@style/rates_text"
        app:font_name="poppinsRegular"/>

    <it.sharengo.eteria.ui.components.CustomTextView
        android:id="@+id/hourTextView"
        style="@style/rates_text"
        app:font_name="poppinsRegular" />

    <it.sharengo.eteria.ui.components.CustomTextView
        android:id="@+id/dayTextView"
        style="@style/rates_text"
        app:font_name="poppinsRegular" />

    <it.sharengo.eteria.ui.components.CustomTextView
        android:id="@+id/bookingTextView"
        style="@style/rates_text"
        app:font_name="poppinsRegular" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <it.sharengo.eteria.ui.components.CustomButton
        android:id="@+id/ratesSignupButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        style="@style/button_primary"
        android:text="@string/rates_signup_action"/>

