<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/hdx_toolbarHeight"
    android:background="@color/taupegray"
    android:orientation="vertical">

    <!-- Header -->
    <RelativeLayout
        style="@style/header_view">
        <ImageView
            android:id="@+id/backImageView"
            style="@style/header_back" />
        <it.sharengo.eteria.ui.components.CustomTextView
            style="@style/header_title"
            app:font_name="poppinsBold"
            android:text="@string/settingslang_title_label"/>
    </RelativeLayout>

    <!-- Italiano -->
    <RelativeLayout
        android:id="@+id/itButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/itCheckImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-25dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                android:src="@drawable/ic_citta_selezionata"/>

            <it.sharengo.eteria.ui.components.CustomTextView
                android:id="@+id/itTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font_name="poppinsBold"
                android:textColor="@color/mediumseagreen"
                android:textSize="12sp"
                android:textAlignment="center"
                android:text="@string/settingslang_it_label"/>

        </LinearLayout>

    </RelativeLayout>


    <!-- Inglese -->
    <RelativeLayout
        android:id="@+id/enButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/whitesmoke">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/enCheckImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-25dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                android:src="@drawable/ic_citta_selezionata"/>

            <it.sharengo.eteria.ui.components.CustomTextView
                android:id="@+id/enTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font_name="poppinsBold"
                android:textColor="@color/mediumseagreen"
                android:textSize="12sp"
                android:textAlignment="center"
                android:text="@string/settingslang_en_label"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>