<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:layout_marginTop="@dimen/hdx_toolbarHeight"
    android:orientation="vertical">

    <!-- Header -->
    <RelativeLayout style="@style/header_view"
        android:visibility="gone">

        <it.sharengo.eteria.ui.components.CustomTextView
            style="@style/header_title"
            android:text="@string/menu_profile"
            app:font_name="poppinsBold" />

    </RelativeLayout>

    <it.sharengo.eteria.ui.base.webview.MyWebView
        android:id="@+id/userareaWebView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>