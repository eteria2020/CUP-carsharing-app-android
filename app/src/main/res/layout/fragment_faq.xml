<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:layout_marginTop="@dimen/hdx_toolbarHeight"
    android:orientation="vertical">

    <!-- Header -->
    <RelativeLayout
        style="@style/header_view">
        <it.sharengo.eteria.ui.components.CustomTextView
            style="@style/header_title"
            app:font_name="poppinsBold"
            android:text="@string/faq_title_label" />
    </RelativeLayout>

    <WebView
        android:id="@+id/faqWebView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <it.sharengo.eteria.ui.components.CustomButton
        android:id="@+id/tutorialButton"
        style="@style/button_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/faq_tutorial_action" />

</LinearLayout>