<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/categoryView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bkgImageView"
            android:layout_width="77.0dp"
            android:layout_height="77.0dp"
            android:tint="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_bkg_darkpastelgreen"/>

        <it.sharengo.development.ui.components.CustomTextView
            android:id="@+id/nameTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:font_name="poppinsBold"
            android:textColor="@color/darkjunglegreen"
            android:textSize="12sp"
            android:textAlignment="center"/>

    </LinearLayout>

    <View
        android:id="@+id/dividerRightView"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/isabelline"/>

    <View
        android:id="@+id/dividerBottomView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/isabelline"/>

</RelativeLayout>


