<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_item_height"
    android:orientation="vertical"
    android:paddingLeft="@dimen/hdx_standard_distance"
    android:paddingRight="@dimen/hdx_standard_distance"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/typeImageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <it.sharengo.eteria.ui.components.CustomTextView
                android:id="@+id/displayNameTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textAlignment="center"
                android:gravity="center_vertical"
                app:font_name="poppinsRegular" />

            <it.sharengo.eteria.ui.components.CustomTextView
                android:id="@+id/subNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textAlignment="center"
                app:font_name="poppinsRegular"
                android:text="@string/search_platesharengo_label"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"/>

</LinearLayout>

